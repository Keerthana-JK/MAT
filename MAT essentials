 private void UpdateNotification(object parameter)
    {
        if (parameter is Notification notification)
        {
            try
            {
                _notificationsRepo.UpdateNotification(notification);
                // Optionally refresh the Notifications collection if needed
            }
            catch (Exception ex)
            {
                // Handle the exception (e.g., show a message to the user)
            }
        }
    }

    private bool CanUpdateNotification(object parameter)
    {
        // Logic to determine if the command can execute
        return parameter is Notification; // Can execute if a notification is selected
    }
